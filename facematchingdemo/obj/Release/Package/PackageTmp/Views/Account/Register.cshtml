@*@model facematchingdemo.Models.RegisterViewModel*@
@{
    ViewBag.Title = "Register";
}
<h2>@ViewBag.Title.</h2>

<div>

        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        <hr />        
        <div id="divRegister" style="width:420px;margin-top:13px;margin-left:100px;">
            <table>
                <tr>
                <td>@Html.Label("Username", new { @class = "col-md-2 control-label" })</td>
                <td>@Html.TextBox("txtUserName", null, new { @class = "text-field" })</td>
              </tr>
            </table>
            
           
        </div>

        <div id="Camera-CaptureDiv" style="width:620px;margin-top:13px;height:640px;margin-left:100px;">
            <table>
                <tr>
                    <td>
                        <label for="Livecamera" style="font-size:15px;color:black" id="LivCamera_Lbl">Live Camera</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div id="Camera" @*style="width:320px;height:240px;padding-top:4px"*@></div>
                    </td>

                </tr>
                <tr>
                    <td>
                        <input type="button" value="Register" class="btn-block" style="margin-left:250px;" onclick="webcam.capture();" />
                    </td>
                    <td>
                        
                    </td>

                    @*<td>
                            <input type="button" value="MatchFind" id="MatchFindBtn" name="MatchFindBtn" onclick="MatchFindFunction();" />
                        </td>*@
                </tr>
            </table>

        </div>

    

  @section scripts
{
        <script src="@Url.Content("~/Scripts/jquery.webcam.js")">
        </script>
    <script>

       
            $("#Camera").webcam({

                width: 800,
                height: 450,
                mode: "save",
                swffile: "@Url.Content("~/Scripts/jscam.swf")",
                onTick: function () { },
                onSave: function () {
                },

                onCapture: function () {
                    debugger;                  
                    var href = '@Url.Action("Capture", "Register")?username=' + $('#txtUserName').val();
                    webcam.save(href);
                    
                    alert("Image Saved & Registered Successfully");
                   
                    //MatchFindFunction();
                },
                debug: function () { },
                onLoad: function () { }
            });
        </script>

    }


</div>

