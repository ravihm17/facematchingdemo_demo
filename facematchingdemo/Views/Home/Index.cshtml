                }
            });
        }
        //});
    </script>
    <script>

        $("#Camera").webcam({
             width: 320,
             height: 240,
             mode: "save",
             swffile: "@Url.Content("~/Scripts/jscam.swf")",
             onTick: function () { },
             onSave: function () {
             },
             onCapture: function () {
                // alert("capture");
                 webcam.save("@Url.Content("~/Home/Capture")/");
                 //alert("after capture");
                 MatchFindFunction();
             },
             debug: function () { },
             onLoad: function () { }
         });
    </script>
